
{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@Types": ["src/types/index.ts"],
      "@Controllers/*": ["src/controllers/*"],
      "@Models/*": ["src/models/*"],
      "@Middleware/*": ["src/middleware/*"],
      "@Database": ["src/database.ts"]
    }
  },
  "exclude": ["node_modules"]
}
